<%= simple_form_for	[@project, @update] do |i| %>
	<%#= i.input :update_week, collection: [ @last_week, @this_week, @next_week] %>
	<%= i.input :update_week, input_html: {value: @this_week } %>
	<%= i.input :main_progress %>
	<%= i.input :progress_status, collection: ["as planned", "slight delays", "delayed"] %>
	<%= i.input :risks %>
	<%= i.input :next_steps %>
	<%#= i.association :project %>
	<%= i.submit "Submit" %>
<% end %>


