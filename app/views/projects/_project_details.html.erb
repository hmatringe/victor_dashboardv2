<h3><%= t(:Scope) %>: <%= scope.name %>
   <small>
      <%= scope.start_date %>
      > 
      <%= scope.end_date %>
   </small>
</h3>
<div class="row">
   <div class="col-lg-offset-2 col-lg-8">
      <!-- Main panel-->
      <div class="panel b">
         <div class="panel-heading">
            <div class="pull-right mt">
               <div class="label label-info">started</div>
            </div>
            <h4 class="mv">
               <span><%= t(:Project) %>: <%= project.title %></span>
               <span><%= t("project.title") %></span>
            </h4>
         </div>
         

         <table class="table">
            <tbody>
               <tr>
                     <td>
                        <strong><%= t(:Start_date) %></strong>
                     </td>
                     <td><%= project.start_date %></td>
                  </tr>
                  <% if project.end_date_actual %>
                     <tr>
                        <td>
                           <strong><%= t(:End_date) %> <br> (<%= t(:actual) %>)</strong>
                        </td>
                        <td><%= project.end_date_actual %></td>
                     </tr>
                  <% else %>
                     <tr>
                        <td>
                           <strong><%= t(:End_date) %> <br> (<%= t(:forecast) %>)</strong>
                        </td>
                        <td><%= project.end_date_forecast %></td>
                     </tr>
                  <% end %>
                  <tr>
                     <td>
                        <strong><%= t(:Owner) %></strong>
                     </td>
                     <td>
                        <!-- <a href="" data-toggle="tooltip" data-title="<%= project.owner.full_name %>">
                           <img src="<%#= image_path('angle/user/03.jpg') %>" alt="project member" class="img-circle thumb24" />
                        </a> -->
                        <%= project.owner.full_name %>
                        <%= mail_to project.owner.email %>
                     </td>
                  </tr>
            </tbody>
         </table>

         <div class="panel-body">
            <h4><%= t(:Description) %></h4>
            <p><%= project.description %></p>
            <p class="text-right">
               <%= link_to "Edit", edit_project_path, class: "btn btn-default btn-sm" %>
