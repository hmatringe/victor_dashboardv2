<div class="col-lg-4 col-md-6">
   <div class="panel b">
      <div class="panel-heading">
         <div class="pull-right">
            <% if project.updates.where(update_week: @this_week).size != 0 %>
               <div class="label label-info"><%= project.updates.last.progress_status %></div>
            <% else %>
               <div class="label label-danger">missing weekly update</div>
            <% end %>
         </div>
         <h4 class="m0"><%= project.title %></h4>
         <small class="text-muted">
            Frame: <%= scope.name %>
            <br>
            <%= scope.start_date %>
            |
            <%= scope.end_date %>
         </small>
      </div>
      <div class="panel-body">
         <div class="table-grid table-grid-align-middle">
            <div class="col">
               <div class="visible-xs visible-sm text-bold text-muted text-right"><%= project.completion %>%</div>
               <div data-toggle="tooltip" data-title="Progression">
                  <div class="progress progress-xs m0">
                     <div style="width:<%= project.completion %>%" class="progress-bar progress-bar-warning"><%= project.completion %>%</div>
                  </div>
               </div>
            </div>
            <div class="col wd-xxs text-right hidden-xs hidden-sm">
               <div class="text-bold text-muted"><%= project.completion %>%</div>
            </div>
         </div>
      </div>
      <table class="table">
         <tbody>
            <tr>
               <td>
                  <strong>Start date</strong>
               </td>
               <td><%= project.start_date %></td>
            </tr>
            <% if project.end_date_actual %>
               <tr>
                  <td>
                     <strong>End date <br> (actual)</strong>
                  </td>
                  <td><%= project.end_date_actual %></td>
               </tr>
            <% else %>
               <tr>
                  <td>
                     <strong>End date <br> (forecast)</strong>
                  </td>
                  <td><%= project.end_date_forecast %></td>
               </tr>
            <% end %>
            <tr>
               <td>
                  <strong>Members</strong>
               </td>
               <td>
                  <% project.scope.participants.size.times do %>
                  <a href="#" class="inline">
                     <img src="<%= image_path('angle/user/0' + rand(1..6).to_s + '.jpg') %>" alt="project member" class="img-circle thumb24" />
                  </a>
                  <% end %>
                     <strong><%= project.scope.participants.size > 5 ? "+" + (project.scope.participants.size - 5).to_s  : "" %></strong>
                  </a>
               </td>
            </tr>
            <tr>
               <td>
                  <strong>Owner</strong>
               </td>
               <td>
                  <a href="" data-toggle="tooltip" data-title="<%= project.owner.first_name + " " + project.owner.last_name %>">
                     <img src="<%= image_path('angle/user/03.jpg') %>" alt="project member" class="img-circle thumb24" />
                  </a>
               </td>
            </tr>
            <tr>
               <td>
                  <strong>Lastest update</strong>
               </td>
               <td>
                  <% if project.updates.size > 0 %>
                     <span class="circle circle-<%= project.updates.last.progress_status_color %> circle-lg text-left" style="margin:1px;"></span>
                     <small> <%= project.updates.last.update_week %></small>
                  <% else %>
                     <small>
                     </small>
                     No update was created
                  <% end %>
                     
                  </a>
               </td>
            </tr>
         </tbody>
      </table>
      <div class="panel-footer text-center">
         <%= link_to project_path(project) do %>
            <button type="button" class="btn btn-default">Details</button>
         <% end %>
         <%# if current_user.admin %>
            <%= link_to edit_project_path(project) do %>
               <button type="button" class="btn btn-default">Edit</button>
            <% end %>
         <%# end %>
         <%= link_to "Create Update", new_project_update_path(project, Update.new), class: "btn btn-default" %>
      </div>
   </div>
</div>