<div class="col-lg-4 col-md-6">
   <div class="panel b">
      <div class="panel-heading">
         <div class="pull-right">
            <%= render partial: "projects/project_status", locals: { project: project} %>
         </div>
         <h4 class="m0"><%= project.title %></h4>
         <small class="text-muted">
            <%= t(:Scope) %>: <%= scope.name %>
         </small>
      </div>
      

      <!-- START higher update -->
      <table class="table">
         <tbody>
            <tr>
               <td>
                  <% if project.updates.where(update_week: @this_week).size != 0 %>
                     <%= render partial: "projects/project_card_updates_higher", locals: {update: project.updates.last} %>
                  <% else %>
                     <%#= t(:no_updates_created) %>
                     <%= link_to t(:Create) + " " + t(:Update), new_project_update_path(project, Update.new), class: "btn btn-default" %>
                     <%#= link_to "Update Now", new_project_update_path(project, Update.new), class: "btn btn-default" %>
                  <% end %>
               </td>
            </tr>
            <tr>
               <td>
                  <div class="media-box-body clearfix">
                    <strong class="media-box-heading text-secondary">
                       <%= t(:project_chrono_progress) %><br>
                       <small class="text-muted">
                        <%= scope.start_date %>
                        |
                        <%= scope.end_date %>
                        </small>
                     </strong>
                     <%= render partial: "projects/progress_bar", locals: {project: project} %>
                  </div>
                  <div class="media-box-body clearfix">
                    <p class="mb-sm">
                      <small class="pull-right">
                        <%= t(:Owner) %>: <%= project.owner.full_name %>
                      </small>
                    </p>
                  </div>
               </td>
            </tr>
         </tbody>
      </table>
      <!-- END higher update -->
   
      <!-- START lower update -->
      <%# if project.updates.where(update_week: @this_week).size != 0 %>
         <!-- <table class="table">
            <tbody>
               <tr>
                  <td>
                     <%#= render partial: "projects/project_card_updates_lower", locals: {update: project.updates.last} %>
                  </td>
               </tr>
            </tbody>
         </table> -->
      <%# end %>
      <!-- END lower update -->

      <div class="panel-footer text-center">
         <%= link_to project_path(project) do %>
            <button type="button" class="btn btn-default"><%= t(:Details) %></button>
         <% end %>
         <%# if current_user.admin %>
            <%= link_to edit_project_path(project) do %>
               <button type="button" class="btn btn-default"><%= t(:Edit) %></button>
            <% end %>
         <%# end %>
      </div>
   </div>
</div>