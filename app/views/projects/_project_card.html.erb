<div class="col-lg-4 col-md-6">
   <div class="panel b">
      <div class="panel-heading">
         <div class="pull-right">
            <div class="label label-info"><%= project.updates.nil? ? project.updates.last.progress_status : "en cours" %></div>
         </div>
         <h4 class="m0"><%= project.title %></h4>
         <small class="text-muted">Last update: TODODate</small>
      </div>
      <div class="panel-body">
         <div class="table-grid table-grid-align-middle">
            <div class="col">
               <div class="visible-xs visible-sm text-bold text-muted text-right"><%= project.completion %>%</div>
               <div data-toggle="tooltip" data-title="Progression">
                  <div class="progress progress-xs m0">
                     <div style="width:<%= project.completion %>%" class="progress-bar progress-bar-warning"><%= project.completion %>%</div>
                  </div>
               </div>
            </div>
            <div class="col wd-xxs text-right hidden-xs hidden-sm">
               <div class="text-bold text-muted"><%= project.completion %>%</div>
            </div>
         </div>
      </div>
      <table class="table">
         <tbody>
            <tr>
               <td>
                  <strong>Start date</strong>
               </td>
               <td><%= project.start_date %></td>
            </tr>
            <tr>
               <td>
                  <strong>End date - forecast</strong>
               </td>
               <td><%= project.end_date_forecast %></td>
            </tr>
            <tr>
               <td>
                  <strong>End date - actual</strong>
               </td>
               <td><%= project.end_date_actual %></td>
            </tr>
            <tr>
               <td>
                  <strong>Members</strong>
               </td>
               <td>
                  <% project.scope.participants.size.times do %>
                  <a href="#" class="inline">
                     <img src="<%= image_path('angle/user/0' + rand(1..6).to_s + '.jpg') %>" alt="project member" class="img-circle thumb24" />
                  </a>
                  <% end %>
                     <strong><%= project.scope.participants.size > 5 ? "+" + (project.scope.participants.size - 5).to_s  : "" %></strong>
                  </a>
               </td>
            </tr>
            <tr>
               <td>
                  <strong>Owner</strong>
               </td>
               <td>
                  <a href="" data-toggle="tooltip" data-title="<%= project.owner.first_name + " " + project.owner.last_name %>">
                     <img src="<%= image_path('angle/user/03.jpg') %>" alt="project member" class="img-circle thumb24" />
                  </a>
               </td>
            </tr>
         </tbody>
      </table>
      <div class="panel-footer text-center">
         <%= link_to project_path(project) do %>
            <button type="button" class="btn btn-default">Manage project</button>
         <% end %>
         <% if current_user.admin %>
            <%= link_to edit_project_path(project) do %>
               <button type="button" class="btn btn-default">Edit project</button>
            <% end %>
         <% end %>
      </div>
   </div>
</div>